@model MCQsDesigner.Web.Models.ViewModel.ExamViewModel
@{
    ViewBag.Title = "ManageExams";


    Layout = "~/Views/Shared/_DashBoardLayout.cshtml";

}

<h2>ManageExams</h2>

<div id="page-wrapper">
    <h2>
        <i class="glyphicon glyphicon-edit"></i> Manage Courses
    </h2>
</div>



<div class="well-sm">

    <div class="panel">
        <div class="panel-header-custom">
            <ul class="nav nav-tabs">
                <li class="active">
                    <a href="#exam-list" data-toggle="tab"><i class="fa fa-navicon"></i><strong> Exam List</strong></a>
                </li>
                <li>
                    <a href="#addExam" data-toggle="tab"><i class="fa fa-plus"></i><strong>  Exam</strong></a>
                </li>
            </ul>
        </div>

        <div class="panel-body">
            <div class="tab-content">
                <!--List Area-->
                <div id="exam-list" class="tab-pane fade in active">
                    <table id="exam-tbl" class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Program</th>
                                <th>Course</th>
                                <th>Exam Code</th>
                                <th>Duration</th>
                                <th>Date Time</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
                <!-- End List Area-->

                <div id="addExam" class="tab-pane fade">
                    <!--Form Area-->
                    @using (Html.BeginForm("AddExam", "Exam", FormMethod.Post, new { @class = "form", role = "form", @id = "Course-form" }))
                    {
                    <div class="col-xs-3">
                        <div class="form-group">
                            @Html.LabelFor(x => x.Exam.Course.DegreeProgram.Category.Title, new { @class = "control-label" })
                            @Html.DropDownListFor(x => x.Exam.Course.DegreeProgram.Category.Title,
                                                     new SelectList(Model.Categories, "Id", "Title"), "-- Select --",
                                                     new { @class = "form-control", @id = "category-Id" })

                        </div>

                        <div class="form-group">
                            @Html.LabelFor(x => x.Exam.Course.DegreeProgram.ProgramTitle, new { @class = "control-label" })
                            @Html.DropDownListFor(x => x.Exam.Course.DegreeProgram.ProgramTitle,
                                                        new SelectList(Model.DegreePrograms, "Id", "ProgramTitle"),
                                                        "-- Select --",
                                                        new { @class = "form-control", @id = "degree-Id" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(x => x.Exam.Course.Id, new { @class = "control-label" })
                            @Html.DropDownListFor(x => x.Exam.Course.Id,
                                                        new SelectList(Model.Courses, "Id", "CourseTitle"),
                                                        "--Select --",
                                                        new { @class = "form-control", @id = "Course-Id" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(x => x.Exam.ExamCode, new { @class = "control-label" })
                            @Html.TextBoxFor(x => x.Exam.ExamCode, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(x => x.Exam.Duration, new { @class = "control-label" })
                            @Html.TextBoxFor(x => x.Exam.Duration, new { @class = "form-control" })
                        </div>
                        <!--Date Picker Area-->
                        <div class="form-group">

                            @Html.LabelFor(x => x.Exam.ExamDate, new { @class = "control-label" })
                            <div class="input-group   date form_date " data-date="" data-date-format="dd M yyyy" data-link-format="yyyy-mm-dd">
                                @Html.TextBoxFor(x => x.Exam.ExamDate, new { @class = "form-control", @value = "12-02-2012" })
                                <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary" id="btn-form">Add</button>
                        </div>
                    </div>


                    }
                    <!--End Form-->

                </div>
            </div>
        </div>
        <!--End panel body-->
    </div>
</div>


@section scripts {

    <script>
        $('.form_date').datetimepicker({

            weekStart: 1,
            todayBtn: 1,
            autoclose: 1,
            todayHighlight: 1,
            startView: 2,
            minView: 2,
            forceParse: 0
        });

        $(document).ready(function () {

            //Fetching programs list
            $("#category-Id").change(function () {
                $("#degree-Id").empty();
                var val = $(this).val();
                $.ajax({

                    url: "/api/Course/GetProgramsList/" + val,
                    success: function (result) {
                        $.each(result, function (index, row) {

                            $("#degree-Id").append("<option value='" + row.id + "'>" + row.programTitle + "</option>")
                        })
                    }

                });
            });
            //Fetching course list
            $("#degree-Id").change(function () {
                $("#Course-Id").empty();
                var val = $(this).val();

                $.ajax({
                    url: "/api/Course/GetCourseList/" + val,
                    success: function (result, status) {
                        $.each(result, function (index, row) {
                            $("#Course-Id").append("<option value='" + row.id + "'>" + row.courseTitle + "</option>")
                        })
                    },
                    error: function (response) {
                        $("#Course-Id").append("<option >" + response.statusText + "</option>")
                    }

                });
            });


            //implementiing data table

            var table = $("#exam-tbl").DataTable({
                ajax: {
                    url: "/api/exam/GetExamList",
                    dataSrc: ""
                },
                columns: [
                  {
                      data: "id"
                  },
                  {
                      data: "degreeProgram.programTitle"
                  },
                  {
                      data: "course.courseTitle"
                  },
                  {
                      data: "examCode"
                  },
                  {
                      data: "duration"
                  },
                  {
                      data: "dateTime"
                  },
                  {
                      data: "id",
                      render: function (data, Type, Row) {
                          return "<a href='#'><span data-exam-id='" + data + "' class='glyphicon glyphicon-trash js-delete'></span>  </a>";
                      }
                  }


                ]

            });
            $("#exam-tbl").on("click", ".js-delete", function () {

                var btn = $(this);

                bootbox.confirm("Are you sure you want to delete this ?", function (result) {

                    if (result) {
                        $.ajax({
                            url: "/api/exam/DeleteExam/" + btn.attr("data-exam-id"),
                            method: 'DELETE',
                            success: function () {
                                table.row(btn.parents("tr").remove()).remove().draw();
                                toastr.success("Deleted SuccessFully ");
                            },
                            error: function (response) {
                                toastr.success(response.statusText);

                            }
                            



                        })
                    }

                })





            });


        });






    </script>

}