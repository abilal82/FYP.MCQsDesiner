@model  MCQsDesigner.Web.Models.ViewModel.CategoryViewModel

@{
    ViewBag.Title = "ManageCategory";
    
        Layout = "~/Views/Shared/_DashBoardLayout.cshtml";
    

}

<div id="page-wrapper">
    <h2><i class="glyphicon glyphicon-edit"></i> ManageCategory</h2>
</div>


<div class="well" style="margin-top:3%;">
    <div class="panel ">

        <div class="panel-header-custom" >
            <ul class="nav nav-tabs ">
                <li class="active" ><a href="#categoryList" data-toggle="tab"><i class="fa fa-navicon"></i><strong >  Category List</strong></a></li>
                <li><a href="#addcategory" data-toggle="tab"><i class="fa fa-plus"></i><strong>  Category</strong></a></li>
            </ul>
        </div>
        <div class="panel-body">

            <div class="tab-content">
                <div id="categoryList" class="tab-pane fade in active">
                    <table id="tblcategory" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>DegreeTitle</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>

                        </tbody>
                    </table>
                </div>
                <div id="addcategory" class="tab-pane fade">

                    @using (Html.BeginForm("AddCategory", "Category", FormMethod.Post, new { @class = "form", role = "form" }))
                    {
                        
                        <div class="col-xs-3">
                            <div class="form-group">
                                @Html.LabelFor(x => x.Categories.Title, new { @class = "control-label  " })
                                @Html.TextBoxFor(x => x.Categories.Title, new { @class = "form-control " })
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Add" class="btn btn-default" />
                            </div>
                        </div>
                    }

                </div>

            </div>

        </div>

    </div> 
</div>


@section scripts {
    <script>
        $(document).ready(function () {

            var table = $("#tblcategory").DataTable({
                ajax: {
                    url: "/api/category/GetCategory",
                    dataSrc:""
                },
                columns: [
                    {
                        data:"id"
                    },
                    {
                        data:"title"
                    },
                    {
                        data: "id",
                        render:function(data,type,categoryRow){
                            return "<a href='#'><span data-category-id='" + data + "' class='glyphicon glyphicon-trash js-delete'></span>  </a>";
                        }
                    }
                ]
                

            });


            $("#tblcategory").on("click", ".js-delete", function () {

                var btn = $(this);

                bootbox.confirm("Are you sure you want to delete this ?", function (result) {

                    if (result) {
                        $.ajax({
                            url: "/api/category/DeleteCategory/" + btn.attr("data-category-id"),
                            method:'DELETE',
                            success: function () {
                                table.row(btn.parents("tr").remove()).remove().draw();
                            }

                        });
                    }

                })

            });

        });

    </script>
    
}