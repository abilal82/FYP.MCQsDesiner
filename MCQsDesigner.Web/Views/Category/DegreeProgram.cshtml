@model MCQsDesigner.Web.Models.ViewModel.DegreeProgramsViewModel
@{
    ViewBag.Title = "SubCategory";

    Layout = "~/Views/Shared/_DashBoardLayout.cshtml";

}

<div id="page-wrapper">
    <h2><i class="glyphicon glyphicon-edit"></i> Manage SubCategory</h2>
</div>



<div class="well-sm">

    <div class="panel">
        <div class="panel-header-custom">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#sub-list" data-toggle="tab"><i class="fa fa-navicon"></i><strong>  Category List</strong></a></li>
                <li><a href="#addsubcategory" data-toggle="tab"><i class="fa fa-plus"></i><strong>  Category</strong></a></li>
            </ul>
        </div>
        
        <div class="panel-body">
            <div class="tab-content">
                <div id="sub-list" class="tab-pane fade in active">
                    <table id="subcategorytbl" class="table table-bordered" >
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Program</th>
                                <th>Level</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
                <div id="addsubcategory" class="tab-pane fade">
                    @using (Html.BeginForm("AddDegreeProgram", "Category", FormMethod.Post, new { @class = "form", role = "form" }))
                    {
                        <div class="col-xs-3">
                            <div class="form-group">
                                @Html.LabelFor(x => x.DegreePrograms.CategoryId,new { @class = "control-label"} )
                                @Html.DropDownListFor(x => x.DegreePrograms.CategoryId, new SelectList(Model.Categories, "Id", "Title"), "--Select Category--", new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(x => x.DegreePrograms.ProgramTitle, new { @class = "control-label"})
                                @Html.TextBoxFor(x => x.DegreePrograms.ProgramTitle, new { @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Add</button>
                            </div>
                        </div>


                    }


                </div>
            </div>
        </div>
    </div>
</div>


@section scripts {

    <script>
        var table = $("#subcategorytbl").DataTable({
            ajax: {
                url: "/api/category/GetProgram",
                dataSrc: ""
            },
            columns: [
                {
                    data: "id"
                },
                {
                    data: "programTitle"
                },
                {
                    data: "category.title"
                },
                {
                    data: "id",
                    render: function (data,Type,ProgramRow) {
                        return "<a href='#'><span data-Program-id='" + data + "' class='glyphicon glyphicon-trash js-delete'></span>  </a>";
                    }
                }

            ]

        });

        $("#subcategorytbl").on("click", ".js-delete", function () {

            var btn = $(this);

            bootbox.confirm("Are you sure you want to delete this ?", function (result) {

                if (result) {
                    $.ajax({ 
                        url: "/api/category/DeleteDegree/"+btn.attr("data-Program-id"),
                        method: 'DELETE',
                        success: function () {
                            table.row(btn.parents("tr").remove()).remove().draw();
                        }
                       


                    });
                }

            })


        })


    </script>

}

